<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arduino:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/adk_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text1"
                android:gravity="right"
                android:text="Disconnected"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:text="GPS:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/gps_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_toRightOf="@id/text2"
                android:gravity="right"
                android:text="Not ready"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:text="Latitude:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/latitudeText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_toRightOf="@id/text3"
                android:gravity="right"
                android:text="Not fixed"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:text="Longitude:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/longitudeText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_toRightOf="@id/text4"
                android:gravity="right"
                android:text="Not fixed"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text4"
                android:text="Altitude:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/altitudeText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text4"
                android:layout_toRightOf="@id/text5"
                android:gravity="right"
                android:text="Not fixed"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text5"
                android:text="Accuracy:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/accuracyText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text5"
                android:layout_toRightOf="@id/text6"
                android:gravity="right"
                android:text="Not fixed"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a picture" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="Debug 1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="Debug 2" />

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="1dp"
            android:layout_height="1dp" >
        </FrameLayout>
    </LinearLayout>

</ScrollView>